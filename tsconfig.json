      "module": "commonjs",
      "noImplicitAny": true,
      "sourceMap": true,
      "strict": true,
      "outDir": "./",
      "baseUrl": "./",
      "paths": {
        "@": ["./node_modules/*"]
      },
      "typeRoots" : [
